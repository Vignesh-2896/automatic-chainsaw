extends layout

block content
  h1(class = "text-center")= title

  h3(class = "text-center") #{team_data.team_title} - #{team_data.team_region}
  h4(class = "text-center font-italic") Motto - #{team_data.team_motto} 

  div(class = "container")
   

    if player_data.length
        h5 Please delete the following players before deleting the team : 
        h5 Players List
            ul
                each player in player_data 
                    li
                        a(href=player.url) #{player.player_name}

    else 
        h5(class = "text-center") Are you sure you want to delete this team ?
        form(method="POST")
            div(class="form-group")
                input(class = "form-control" name = "team_id" type="hidden" required = "true" value=team_data._id)        
                button(type="submit" class = "btn btn-danger") Delete
        