extends layout

block content
  h1(class = "text-center text-dark")= title

  h3(class = "text-center text-secondary") #{team_data.team_title} - #{team_data.team_region}
  h4(class = "text-center font-italic text-secondary")= team_data.team_motto

  div(class = "container")
    h4 Players List
    ul
        each player in player_data 
            li
                a(href=player.url) #{player.player_name}

        else 
            p No player data available for this team.

  hr
  div(class = "container")
    h4(class = "text-center text-dark") Actions Available
    a(href = team_data.url + "/update") 
      button(type = "button" class = "m-2 btn btn-success") Update 
    a(href = team_data.url + "/delete") 
      button(type = "button" class = "m-2 btn btn-danger") Delete 
        